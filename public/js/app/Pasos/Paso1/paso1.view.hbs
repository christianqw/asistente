<div class="body-assistant">
  <!--Cada paso modifica el contenedor por completo-->
  <div id="contentAssistantRegion" class="panel panel-default conteiner">
      <!--DONDE ESTOY PARADO-->
      <div id="headerAssistantRegion" class="panel-heading">
        <h2 class="panel-title">Definiendo el Mundo [Asistente Logic World]</h2>
      </div>
      <!--2 columnas-->
      <div class="panel-body row">
        <!--COL IZQ - NAV. PASOS RESCORRIDOS - PASOS FALTANTES-->
          <div id="navigateAssistantRegion" class="col-sm-2">
            <h3 class="list-title">Pasos</h3>
            <ul class="list-group">
              <li class="list-group-item nav-step-assistant">Bienvenidos</li>
              <li class="list-group-item nav-step-assistant"><span class="badge"> ← </span>Paso 1</li>
              <li class="list-group-item nav-step-assistant">Paso 2</li>
              <li class="list-group-item nav-step-assistant">Paso 3</li>
              <li class="list-group-item nav-step-assistant">Paso 4</li>
            </ul>
          </div>
      <!--COL DER - FORMULARIO. -->
          <div id="formAssistantRegion" class="col-sm-10 ">
            <form id="form-paso1" class="form-horizontal" data-toggle="validator" role="form">
              <fieldset>
              <!-- Form Name -->
              <legend class="legend-form-assistant">Modelo</legend>
              <!-- Text input-->
              <div class="form-group has-feedback">
                <label class="col-md-2 form-control-label control-label" for="inputNameModel">Nombre</label>
                <div class="col-md-4">
                  <input id="inputNameModel" name="inputNameModel" type="text" maxlength="15" placeholder="ej:Granja" class="form-control input-md" required />
                  <span class="help-block">Nombre del modelo</span>
                </div>
              </div>

              <!-- File Button -->
              <div class="form-group" >
                <label class="col-md-2 form-control-label" for="btnIconModel">Imagen</label>
                <div class="col-md-4">
                  <input id="btnIconModel" name="filePaso1" class="input-file" type="file">
                </div>
              </div>
              </fieldset>

              <fieldset>
              <!-- Form Name -->
              <legend class="legend-form-assistant">Fondo</legend>
              <!-- File Button -->
              <div class="form-group">
                <label class="col-md-2 form-control-label" for="btnFondoModel">Fondo</label>
                <div class="col-md-4">
                  <input id="btnFondoModel" name="filePaso1" class="input-file" type="file">
                  <span class="help-block">Fondo del Modelo</span>
              </div>

              </div>
              <!-- File Button -->
              <div class="form-group">
                <label class="col-md-2 form-control-label" for="btnMascaraModel">Mascara</label>
                <div class="col-md-4">
                  <input id="btnMascaraModel" name="filePaso1" class="input-file" type="file">
                  <span class="help-block">Mascara del Modelo</span>
                </div>
              </div>
              </fieldset>
              </form>

              <!-- BOTONES MOVIMIENTOS -->
              <div class="conteiner-actions btn-group" role="group">
                  <button id="anterior" type="button" class="btn btn-default btn-action"><span class="glyphicon glyphicon-chevron-left" aria-hidden="false"> Atrás</button>
                  <button id="siguiente" type="submit" class="btn btn-default btn-action">Siguiente <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></button>
                  <button id="finalizar" type="button" class="btn btn-default disabled">Finalizar</button>
                  <button id="cancelar" type="button" class="btn btn-default" href="#">Cancelar</button>
                  <button id="help" type="button" class="btn btn-default ">Ayuda</button>
              </div>

          </div>
    </div>
  </div>
</div>
